{% extends 'base.html.twig' %}

{% block title %}L'Essence - Article{% endblock %}

{% block body %}
<section class="bg-gray-50 min-h-screen pt-20">
    <div class="container mx-auto px-4 py-12">
        <div class="flex flex-col lg:flex-row gap-12">
            <!-- Image Produit -->
            <div class="lg:w-1/2 flex justify-center">
                <div class="relative w-full max-w-md h-96 bg-white rounded-xl shadow-lg overflow-hidden">
                    <img src="../uploads/articles/{{article.id}}.png" 
                            alt="{{ article.title }}" 
                            class="product-image w-full h-full object-contain p-8">
                    <div class="absolute top-4 right-4 bg-white rounded-full p-2 shadow-md">
                        <i class="fas fa-heart text-gray-400 hover:text-red-500 cursor-pointer"></i>
                    </div>
                </div>
            </div>
            
            <!-- Détails Produit -->
            <div class="lg:w-1/2">
                <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-2">{{ article.title }}</h1>
                <div class="flex items-center mb-4">
                    <div class="flex mr-2">
                        <i class="fas fa-star rating-star"></i>
                        <i class="fas fa-star rating-star"></i>
                        <i class="fas fa-star rating-star"></i>
                        <i class="fas fa-star rating-star"></i>
                        <i class="fas fa-star-half-alt rating-star"></i>
                    </div>
                    <span class="text-gray-600">(42 avis)</span>
                </div>
                
                <p class="text-2xl font-semibold text-gray-900 mb-6">{{article.price}}€</p>
                
                <div class="mb-8">
                    <p class="text-gray-700 mb-4">
                        {{article.description}}
                    </p>
                </div>

                <div class="mb-8">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Concentration</h3>
                    <div class="flex space-x-4">
                        {% for concentration in concentrations %}
                            <button class="flex-1 border border-gray-300 rounded-lg p-3 cursor-pointer hover:border-black transition-colors concentration-option text-left" data-value="{{ concentration.id }}">
                                <h4 class="font-medium">{{ concentration.name }}</h4>
                                <p class="text-sm text-gray-500">{{ concentration.description }}</p>
                            </button>
                        {% endfor %}
                    </div>
                </div>
                
                <div class="mb-8">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Taille</h3>
                    <div class="flex space-x-4">
                        {% for size in sizes %}
                            <button class="px-4 py-2 border border-gray-300 rounded-full hover:border-black transition-colors taille-option" data-value="{{ size.id }}">{{ size.name }}</button>
                        {% endfor %}
                    </div>
                </div>


                <div class="mb-8">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Quantité</h3>
                    <div class="flex flex-col sm:flex-row gap-4">
                            <div class="flex items-center border rounded-md overflow-hidden">
                                <button id="decrement-btn" class="px-4 py-2 bg-gray-100 hover:bg-gray-200">-</button>
                                <span id="quantity-value" class="px-4">1</span>
                                <button id="increment-btn" class="px-4 py-2 bg-gray-100 hover:bg-gray-200">+</button>
                            </div>
                            <button class="custom-bg hover:bg-purple-700 text-white font-medium py-2 px-6 rounded-md transition duration-300 flex-1">
                                <i class="fas fa-shopping-cart mr-2"></i> Ajouter au panier
                            </button>
                    </div>
                </div>
                
                <div class="border-t pt-4">
                    <div class="flex items-center text-gray-600">
                        <i class="fas fa-shield-alt mr-2"></i>
                        <span>Garantie 5 ans</span>
                    </div>
                    <div class="flex items-center text-gray-600 mt-2">
                        <i class="fas fa-truck mr-2"></i>
                        <span>Livraison gratuite et retour sous 30 jours</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<script>
// Concentration radio-like behavior
document.querySelectorAll('.concentration-option').forEach(function(btn) {
    btn.addEventListener('click', function() {
        document.querySelectorAll('.concentration-option').forEach(function(b) {
            b.classList.remove('bg-black', 'text-white');
            b.classList.add('bg-white', 'text-gray-900');
        });
        btn.classList.add('bg-black', 'text-white');
        btn.classList.remove('bg-white', 'text-gray-900');
    });
});

// Taille radio-like behavior
document.querySelectorAll('.taille-option').forEach(function(btn) {
    btn.addEventListener('click', function() {
        document.querySelectorAll('.taille-option').forEach(function(b) {
            b.classList.remove('bg-black', 'text-white');
            b.classList.add('bg-white', 'text-gray-900');
        });
        btn.classList.add('bg-black', 'text-white');
        btn.classList.remove('bg-white', 'text-gray-900');
    });
});

// Quantity buttons
const quantityValue = document.getElementById('quantity-value');
const decrementBtn = document.getElementById('decrement-btn');
const incrementBtn = document.getElementById('increment-btn');
let quantity = 1;
decrementBtn.addEventListener('click', function() {
    if (quantity > 1) {
        quantity--;
        quantityValue.textContent = quantity;
    }
});
incrementBtn.addEventListener('click', function() {
    quantity++;
    quantityValue.textContent = quantity;
});
</script>

{% endblock %}
